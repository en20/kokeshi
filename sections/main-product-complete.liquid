                          {% endif %}
                          {% if available_option_variants_size <= 0 %}
                            disabled="disabled"
                          {% endif %}
                          value="{{ value | escape }}"
                          data-index="option{{ forloop.index }}"
                          name="{{ option.name | handleize }}"
                          id="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}"
                          class="hidden"
                          x-model="selectedOptions[{{ index }}]"
                        >
