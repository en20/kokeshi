                                      | image_url: width: 300
                                      | image_tag:
                                        fetchpriority: fetchpriority,
                                        loading: loading,
                                        class: 'gallery-image image object-cover'
                                    }}
                                  {% when 'video' %}
                                    {{
                                      media.preview_image
                                      | image_url: width: 300
                                      | image_tag:
                                        fetchpriority: fetchpriority,
                                        loading: loading,
                                        class: 'gallery-image image object-cover'
                                    }}
